		"tags": [ "ASP.NET", "ASP.NETCore", "MVC", "MVCCore", "Paging", "Page", "Pager", "Bootstrap" ],
		"projectUrl": "https://github.com/sgjsakura/AspNetCore",
		"licenseUrl": "https://github.com/sgjsakura/AspNetCore/blob/master/LICENSE.txt"
	},

	"dependencies": {
		"Microsoft.AspNetCore.Mvc.ViewFeatures": "1.0.0",
		"Microsoft.AspNetCore.Razor.Runtime": "1.0.0",
		"Sakura.AspNetCore.PagedList.Abstractions": "2.0.0"
	},

	"frameworks": {
		"netstandard1.6": {},
		"net451": {}
	},

	"configurations": {
		"Debug": {
			"buildOptions": {
				"optimize": false,
				"xmlDoc": false
			}
		},
		"Release": {
			"buildOptions": {
				"optimize": true,
				"xmlDoc": true
			}
		}
	},

	"scripts": {
		"postcompile": [ "dotnet pack --no-build -c Release" ]
