{
	"title": "ASP.NET Core MVC Pager",
	"version": "2.0.11",
	"description": "This library provides data-paging functionality and pager UI for ASP.NET Core MVC projects.",
	"authors": [ "Iris Sakura" ],

	"packOptions": {
